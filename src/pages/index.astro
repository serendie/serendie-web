---
import TopLayout from "@/layouts/TopLayout.astro";
import { LinkContent } from "@/components/toppage/LinkContent";
import Showcase from "@/components/toppage/Showcase.astro";
import { styled } from "styled-system/jsx";
import ReleaseNote from "@/components/toppage/ReleaseNote.astro";
import Contact from "@/components/toppage/Contact.astro";
import { BackgroundShape } from "@/components/toppage/BackgroundShape";
import Global from "@/layouts/Global.astro";
import { Header } from "@/components/toppage/Header";

const Container = styled("div", {
  base: {
    px: "24px",
    maxWidth: "calc(1640px + 300px)",
    mx: "auto",
    expanded: {
      px: "150px",
      lgDown: {
        px: "48px",
      },
    },
  },
});

const content = [
  {
    titleEn: "Get Started",
    description: "",
    links: [
      {
        title: "デザイン",
        href: "/get-started/design",
        illustration: "/assets/illustration/sample/illustration-0.svg",
      },
      {
        title: "開発",
        href: "/get-started/dev",
        illustration: "/assets/illustration/sample/illustration-1.svg",
      },
    ],
  },
  {
    titleEn: "Foundations",
    description: "",
    links: [
      {
        title: "デザイントークン",
        href: "/foundations/design-tokens",
        illustration: "/assets/illustration/sample/illustration-0.svg",
      },
      {
        title: "カラー",
        href: "/foundations/color",
        illustration: "/assets/illustration/sample/illustration-1.svg",
      },
      {
        title: "テーミング",
        href: "/foundations/theming",
        illustration: "/assets/illustration/sample/illustration-2.svg",
      },
      {
        title: "タイポグラフィ",
        href: "/foundations/typography",
        illustration: "/assets/illustration/sample/illustration-3.svg",
      },
      {
        title: "寸法",
        href: "/foundations/dimension",
        illustration: "/assets/illustration/sample/illustration-4.svg",
      },
      {
        title: "階層",
        href: "/foundations/elevation",
        illustration: "/assets/illustration/sample/illustration-0.svg",
      },
      {
        title: "アイコン",
        href: "/foundations/icon",
        illustration: "/assets/illustration/sample/illustration-1.svg",
      },
      {
        title: "イラストレーション",
        href: "/foundations/illustration",
        illustration: "/assets/illustration/sample/illustration-1.svg",
      },
    ],
  },
  {
    titleEn: "Components",
    description: "",
    links: [
      {
        title: "Accordion",
        href: "/components/accordion",
        illustration: "/assets/illustration/sample/illustration-0.svg",
      },
      {
        title: "Bottom Navigation",
        href: "/components/bottom-navigation",
        illustration: "/assets/illustration/sample/illustration-2.svg",
      },
      {
        title: "Button",
        href: "/components/button",
        illustration: "/assets/illustration/sample/illustration-0.svg",
      },
      {
        title: "List",
        href: "/components/list",
        illustration: "/assets/illustration/sample/illustration-3.svg",
      },
      {
        title: "Select",
        href: "/components/select",
        illustration: "/assets/illustration/sample/illustration-4.svg",
      },
      {
        title: "Tabs",
        href: "/components/tabs",
        illustration: "/assets/illustration/sample/illustration-1.svg",
      },
      {
        title: "TextField",
        href: "/components/tabs",
        illustration: "/assets/illustration/sample/illustration-1.svg",
      },
      {
        title: "See All",
        href: "/components/",
        illustration: "/assets/illustration/sample/illustration-1.svg",
      },
    ],
  },
];
---

<TopLayout>
  <Header client:load />

  <Container>
    <LinkContent content={content} client:idle />
    <Showcase />
    <ReleaseNote />
    <Contact />
  </Container>

  <BackgroundShape client:idle />

  <style is:global>
    @layer utilities {
      // テーマによってsvgを内包するdivのmix-blend-modeを変更
      [data-name="top-background-shape"] > div {
        mix-blend-mode: multiply;
        [data-panda-theme="kurikawa"] & {
          mix-blend-mode: normal;
        }
        [data-panda-theme="sumire"] & {
          mix-blend-mode: normal;
        }
      }
    }
  </style>
</TopLayout>
