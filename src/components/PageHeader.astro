---
import { css } from "styled-system/css";
import PageTab from "./PageTab.astro";
import type { Props as PageTabProps } from "./PageTab.astro";

interface Props extends PageTabProps {
  hideBorder?: boolean;
}
const { links, hideBorder } = Astro.props;
---

<header
  class={css({
    maxWidth: "100%",
    position: "relative",
    gridColumn: "span 8",
    mdDown: {
      maxWidth: "calc(100vw - 48px)",
      gridColumn: "span 2",
    },
  })}
>
  <slot />
  <PageTab links={links} hideBorder={hideBorder} />
</header>
