---
import { styled } from "@serendie/ui/jsx"
import { ShowcaseCarousel } from "./ShowcaseCarousel"
import { ShowcaseCarouselWrapper } from "./ShowcaseCarouselWrapper"

const ShowcaseContainer = styled("div", {
  base: {
    pb: '160px'
  },
})

const Title = styled("h2", {
  base: {
    textStyle: "sd.system.typography.headline.small_expanded",
    color: "sd.reference.color.scale.blue.900",
    fontWeight: 'bold',
    mb: '40px',
  },
})

---

<ShowcaseContainer>
  <Title>Serendie Design Systemが使われている事例</Title>
  
  <ShowcaseCarouselWrapper client:load/>
</ShowcaseContainer>