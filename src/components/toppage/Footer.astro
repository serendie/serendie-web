---
import { styled } from "styled-system/jsx";

const FooterWrapper = styled("footer", {
  base: {
    position: "relative",
    pt: 32,
    pb: 32,
    px: 24,
    bg: "web.system.color.impression.secondary",
    color: "white",
    mt: "calc(var(--radii-sd-system-dimension-radius-extra-large) * -1)",
    zIndex: 1,
    borderTopRadius: "sd.system.dimension.radius.extraLarge",
    expanded: {
      pt: 120,
      pb: 40,
      px: 150,
    },
  },
});
const FooterContainer = styled("div", {
  base: {
    maxWidth: "calc(1640px + 240px)",
    margin: "0 auto",
    display: "flex",
    flexDirection: "column",
    expanded: {
      flexDirection: "row",
      justifyContent: "space-between",
    },
    "& a:hover": {
      opacity: 0.6,
    },
  },
});
const FooterTitle = styled("h1", {
  base: {
    textStyle: "sd.system.typography.headline.large_expanded",
    fontSize: "24px",
    fontWeight: "bold",
    mb: 40,
    expanded: {
      mr: 32,
      textStyle: "sd.system.typography.headline.large_expanded",
    },
  },
});
const FooterLinks = styled("div", {
  base: {
    display: "grid",
    gridTemplateColumns: "repeat(2, 1fr)",
    gap: 16,
    textStyle: "sd.system.typography.body.extraSmall_compact",
    fontSize: "14px",
    "& h2": {
      textStyle: "sd.system.typography.title.small_compact",
      mb: "16px",
      expanded: {
        mb: "24px",
      },
    },
    "& ul": {
      listStyle: "none",
      padding: 0,
    },
    expanded: {
      gap: 48,
      gridTemplateColumns: "repeat(4, auto)",
    },
  },
});

const FooterLinksLi = styled("li", {
  base: {
    display: "none",
    mb: "16px",
    expanded: {
      display: "block",
      mb: "16px",
    },
  },
});

const FooterCopyright = styled("div", {
  base: {
    display: "flex",
    flexDirection: "column",
    gap: '16px',
    mt: '100px',
    expanded: {
      flexDirection: "row",
      alignItems: "center",
      gap: '40px',
      mt: '80px'
    },
    "& ul": {
      textStyle: "sd.system.typography.body.extraSmall_compact",
      fontSize: "14px",
      display: "flex"
    },
    "& ul li": {
      mr: "16px"
    },
    "& a:hover": {
      opacity: 0.6,
    }
  },
});

const footerLink = [
  {
    title: "About",
    url: "/about",
    links: [
      {
        title: "Serendie Design Systemとは",
        url: "/about",
      },
    ],
  },
  {
    title: "Get Started",
    url: "/get-started",
    links: [
      {
        title: "デザイン",
        url: "/get-started/design",
      },
      {
        title: "開発",
        url: "/get-started/dev",
      },
    ],
  },
  {
    title: "Foundation",
    url: "/foundations",
    links: [
      {
        title: "デザイントークン",
        url: "/foundations/design-tokens",
      },
      {
        title: "カラー",
        url: "/foundations/color",
      },
      {
        title: "テーミング",
        url: "/foundations/theming",
      },
      {
        title: "タイポグラフィ",
        url: "/foundations/typography",
      },
      {
        title: "寸法",
        url: "/foundations/dimension",
      },
      {
        title: "階層",
        url: "/foundations/elevation",
      },
      {
        title: "アイコン",
        url: "/foundations/icon",
      },
      {
        title: "イラストレーション",
        url: "/foundations/illustration",
      },
    ],
  },
  {
    title: "Components",
    url: "/components",
    links: [
      {
        title: "Accordion",
        url: "/components/accordion",
      },
      {
        title: "Bottom Navigation",
        url: "/components/bottom-navigation",
      },
      {
        title: "Button",
        url: "/components/button",
      },
      {
        title: "List",
        url: "/components/list",
      },
      {
        title: "Select",
        url: "/components/select",
      },
      {
        title: "Tabs",
        url: "/components/tabs",
      },
      {
        title: "Text Field",
        url: "/components/text-field",
      },
      {
        title: "すべて見る",
        url: "/components",
      },
    ],
  },
];
---

<FooterWrapper>
  <FooterContainer>
      <FooterTitle>
        <a href='/'>
          Serendie Design System
        </a>
      </FooterTitle>
    <FooterLinks>
      {
        footerLink.map((link) => (
          <div>
            <h2><a href={link.url}>{link.title}</a></h2>
            <ul>
              {link.links.map((item, index) => (
                <FooterLinksLi>
                  <a href={item.url}>{item.title}</a>
                </FooterLinksLi>
              ))}
            </ul>
          </div>
        ))
      }
    </FooterLinks>
  </FooterContainer>
  <FooterCopyright>
    <span>
      © Mitsubishi Electric Corporation
    </span>
    <ul>
      <li>
        <a href='/terms'>利用規約</a>
      </li>
      <li>
        |
      </li>
      <li>
        <a href='https://x.com/SerendieDesign' target="_blank">ご意見・お問い合わせ</a>
