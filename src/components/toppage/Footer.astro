---
import { styled } from "styled-system/jsx";

const FooterWrapper = styled("footer", {
  base: {
    position: "relative",
    pt: 32,
    pb: 32,
    px: 24,
    bg: "web.system.color.impression.secondary",
    color: "white",
    mt: "calc(var(--radii-sd-system-dimension-radius-extra-large) * -1)",
    zIndex: 1,
    borderTopRadius: "sd.system.dimension.radius.extraLarge",
    expanded: {
      pt: 120,
      pb: 40,
      px: 150,
    },
  },
});
const FooterContainer = styled("div", {
  base: {
    maxWidth: "calc(1640px + 240px)",
    margin: "0 auto",
    display: "flex",
    flexDirection: "column",
    expanded: {
      flexDirection: "row",
      justifyContent: "space-between",
    },
  },
});
const FooterTitle = styled("div", {
  base: {
    textStyle: "sd.system.typography.headline.large_expanded",
    fontSize: "24px",
    fontWeight: "bold",
    mr: 32,
    mb: 40,
    expanded: {
      textStyle: "sd.system.typography.headline.large_expanded",
    },
  },
});
const FooterLinks = styled("div", {
  base: {
    display: "grid",
    gridTemplateColumns: "repeat(2, 1fr)",
    gap: 16,
    textStyle: "sd.system.typography.body.extraSmall_expanded",
    "& h2": {
      textStyle: "sd.system.typography.title.small_expanded",
      mb: "16px",
      expanded: {
        mb: "24px",
      },
    },
    "& ul": {
      listStyle: "none",
      padding: 0,
    },
    expanded: {
      gap: 48,
      gridTemplateColumns: "repeat(4, auto)",
    },
  },
});

const FooterLinksLi = styled("li", {
  base: {
    display: "none",
    mb: "16px",
    expanded: {
      display: "block",
      mb: "16px",
    },
  },
});

const FooterCopyright = styled("div", {
  base: {
    textAlign: "left",
    mt: 160,
    expanded: {
      textAlign: "right",
      mt: 80,
    },
  },
});

const footerLink = [
  {
    title: "About",
    links: [
      {
        title: "Serendie Design Systemとは",
        url: "#",
      },
      {
        title: "ニュース・イベント",
        url: "#",
      },
      {
        title: "ミートアップ",
        url: "#",
      },
      {
        title: "適用事例",
        url: "#",
      },
    ],
  },
  {
    title: "Get Started",
    links: [
      {
        title: "スターターガイド",
        url: "#",
      },
    ],
  },
  {
    title: "Foundation",
    links: [
      {
        title: "Design Token",
        url: "#",
      },
      {
        title: "Color",
        url: "#",
      },
      {
        title: "Design Token",
        url: "#",
      },
      {
        title: "Theming",
        url: "#",
      },
      {
        title: "Typography",
        url: "#",
      },
      {
        title: "Dimension",
        url: "#",
      },
      {
        title: "Elevation",
        url: "#",
      },
    ],
  },
  {
    title: "Components",
    links: [
      {
        title: "コンポーネントとは",
        url: "#",
      },
    ],
  },
  {
    title: "Contribution",
    links: [
      {
        title: "Figma",
        url: "#",
      },
      {
        title: "React",
        url: "#",
      },
      {
        title: "ドキュメント",
        url: "#",
      },
    ],
  },
];
---

<FooterWrapper>
  <FooterContainer>
    <FooterTitle><h1>Serendie Design System</h1></FooterTitle>
    <FooterLinks>
      {
        footerLink.map((link) => (
          <div>
            <h2>{link.title}</h2>
            <ul>
              {link.links.map((item, index) => (
                <FooterLinksLi>
                  <a href={item.url}>{item.title}</a>
                </FooterLinksLi>
              ))}
            </ul>
          </div>
        ))
      }
    </FooterLinks>
  </FooterContainer>
  <FooterCopyright>© Mitsubishi Electric Corporation</FooterCopyright>
</FooterWrapper>
