---
import { styled } from "styled-system/jsx";
import { getLangFromUrl, useTranslations, useLocalePath, switchLanguagePath } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const localePath = useLocalePath(lang);
const jaPath = switchLanguagePath(Astro.url, "ja");
const enPath = switchLanguagePath(Astro.url, "en");

const FooterWrapper = styled("footer", {
  base: {
    position: "relative",
    pt: 32,
    pb: 32,
    px: 24,
    bg: "web.system.color.impression.secondary",
    color: "white",
    mt: "calc(var(--radii-sd-system-dimension-radius-extra-large) * -1)",
    zIndex: 1,
    borderTopRadius: "sd.system.dimension.radius.extraLarge",
    expanded: {
      pt: 120,
      pb: 40,
      px: 150,
    },
  },
});
const FooterContainer = styled("div", {
  base: {
    maxWidth: "calc(1640px + 240px)",
    margin: "0 auto",
    display: "flex",
    flexDirection: "column",
    expanded: {
      flexDirection: "row",
      justifyContent: "space-between",
    },
    "& a:hover": {
      opacity: 0.6,
    },
  },
});
const FooterTitle = styled("h1", {
  base: {
    textStyle: "sd.system.typography.headline.large_expanded",
    fontSize: "24px",
    fontWeight: "bold",
    mb: 40,
    expanded: {
      mr: 32,
      textStyle: "sd.system.typography.headline.large_expanded",
    },
  },
});
const FooterLinks = styled("div", {
  base: {
    display: "grid",
    gridTemplateColumns: "repeat(2, 1fr)",
    gap: 16,
    textStyle: "sd.system.typography.body.extraSmall_compact",
    fontSize: "14px",
    "& h2": {
      textStyle: "sd.system.typography.title.small_compact",
      mb: "16px",
      expanded: {
        mb: "24px",
      },
    },
    "& ul": {
      listStyle: "none",
      padding: 0,
    },
    expanded: {
      gap: 48,
      gridTemplateColumns: "repeat(4, auto)",
    },
  },
});

const FooterLinksLi = styled("li", {
  base: {
    display: "none",
    mb: "16px",
    expanded: {
      display: "block",
      mb: "16px",
    },
  },
});

const FooterCopyright = styled("div", {
  base: {
    display: "flex",
    flexDirection: "column",
    gap: "16px",
    mt: "100px",
    expanded: {
      flexDirection: "row",
      alignItems: "center",
      gap: "40px",
      mt: "80px",
    },
    "& ul": {
      textStyle: "sd.system.typography.body.extraSmall_compact",
      fontSize: "14px",
      display: "flex",
    },
    "& ul li": {
      mr: "16px",
    },
    "& a:hover": {
      opacity: 0.6,
    },
    "& a[aria-current='page']": {
      opacity: 0.4,
      pointerEvents: "none",
    },
  },
});

const footerLink = [
  {
    title: t("footer.about"),
    url: localePath("about"),
    links: [
      {
        title: t("footer.aboutSerendie"),
        url: localePath("about"),
      },
    ],
  },
  {
    title: t("footer.getStarted"),
    url: localePath("get-started"),
    links: [
      {
        title: t("footer.design"),
        url: localePath("get-started/design"),
      },
      {
        title: t("footer.development"),
        url: localePath("get-started/dev"),
      },
    ],
  },
  {
    title: t("footer.foundation"),
    url: localePath("foundations"),
    links: [
      {
        title: t("footer.designTokens"),
        url: localePath("foundations/design-tokens"),
      },
      {
        title: t("footer.color"),
        url: localePath("foundations/color"),
      },
      {
        title: t("footer.theming"),
        url: localePath("foundations/theming"),
      },
      {
        title: t("footer.typography"),
        url: localePath("foundations/typography"),
      },
      {
        title: t("footer.dimension"),
        url: localePath("foundations/dimension"),
      },
      {
        title: t("footer.elevation"),
        url: localePath("foundations/elevation"),
      },
      {
        title: t("footer.icon"),
        url: localePath("foundations/icon"),
      },
      {
        title: t("footer.illustration"),
        url: localePath("foundations/illustration"),
      },
    ],
  },
  {
    title: t("footer.components"),
    url: localePath("components"),
    links: [
      {
        title: t("footer.accordion"),
        url: localePath("components/accordion"),
      },
      {
        title: t("footer.button"),
        url: localePath("components/button"),
      },
      {
        title: t("footer.list"),
        url: localePath("components/list"),
      },
      {
        title: t("footer.search"),
        url: localePath("components/search"),
      },
      {
        title: t("footer.select"),
        url: localePath("components/select"),
      },
      {
        title: t("footer.tabs"),
        url: localePath("components/tabs"),
      },
      {
        title: t("footer.textField"),
        url: localePath("components/text-field"),
      },
      {
        title: t("footer.seeAll"),
        url: localePath("components"),
      },
    ],
  },
];
---

<FooterWrapper>
  <FooterContainer>
    <FooterTitle>
      <a href={localePath("")}>
        {t("footer.title")}
      </a>
    </FooterTitle>
    <FooterLinks>
      {
        footerLink.map((link) => (
          <div>
            <h2>
              <a href={link.url}>{link.title}</a>
            </h2>
            <ul>
              {link.links.map((item, index) => (
                <FooterLinksLi>
                  <a href={item.url}>{item.title}</a>
                </FooterLinksLi>
              ))}
            </ul>
          </div>
        ))
      }
    </FooterLinks>
  </FooterContainer>
  <FooterCopyright>
    <span>
      {t("footer.copyright")}
    </span>
    <ul>
      <li>
        <a href={localePath("terms")}>{t("footer.terms")}</a>
      </li>
      <li>|</li>
      <li>
        <a href="https://x.com/SerendieDesign" target="_blank"
          >{t("footer.contact")}</a
        >
      </li>
      <li>|</li>
      <li>
        <a href={jaPath} aria-current={lang === "ja" ? "page" : undefined}>
          {t("language.japanese")}
        </a>
      </li>
      <li>/</li>
      <li>
        <a href={enPath} aria-current={lang === "en" ? "page" : undefined}>
          {t("language.english")}
        </a>
      </li>
    </ul>
  </FooterCopyright>
</FooterWrapper>
