---
import { styled } from "styled-system/jsx";
import { getLangFromUrl, useTranslations } from "@/i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const FooterWrapper = styled("footer", {
  base: {
    position: "relative",
    pt: 32,
    pb: 32,
    px: 24,
    bg: "web.system.color.impression.secondary",
    color: "white",
    mt: "calc(var(--radii-sd-system-dimension-radius-extra-large) * -1)",
    zIndex: 1,
    borderTopRadius: "sd.system.dimension.radius.extraLarge",
    expanded: {
      pt: 120,
      pb: 40,
      px: 150,
    },
  },
});
const FooterContainer = styled("div", {
  base: {
    maxWidth: "calc(1640px + 240px)",
    margin: "0 auto",
    display: "flex",
    flexDirection: "column",
    expanded: {
      flexDirection: "row",
      justifyContent: "space-between",
    },
    "& a:hover": {
      opacity: 0.6,
    },
  },
});
const FooterTitle = styled("h1", {
  base: {
    textStyle: "sd.system.typography.headline.large_expanded",
    fontSize: "24px",
    fontWeight: "bold",
    mb: 40,
    expanded: {
      mr: 32,
      textStyle: "sd.system.typography.headline.large_expanded",
    },
  },
});
const FooterLinks = styled("div", {
  base: {
    display: "grid",
    gridTemplateColumns: "repeat(2, 1fr)",
    gap: 16,
    textStyle: "sd.system.typography.body.extraSmall_compact",
    fontSize: "14px",
    "& h2": {
      textStyle: "sd.system.typography.title.small_compact",
      mb: "16px",
      expanded: {
        mb: "24px",
      },
    },
    "& ul": {
      listStyle: "none",
      padding: 0,
    },
    expanded: {
      gap: 48,
      gridTemplateColumns: "repeat(4, auto)",
    },
  },
});

const FooterLinksLi = styled("li", {
  base: {
    display: "none",
    mb: "16px",
    expanded: {
      display: "block",
      mb: "16px",
    },
  },
});

const FooterCopyright = styled("div", {
  base: {
    display: "flex",
    flexDirection: "column",
    gap: '16px',
    mt: '100px',
    expanded: {
      flexDirection: "row",
      alignItems: "center",
      gap: '40px',
      mt: '80px'
    },
    "& ul": {
      textStyle: "sd.system.typography.body.extraSmall_compact",
      fontSize: "14px",
      display: "flex"
    },
    "& ul li": {
      mr: "16px"
    },
    "& a:hover": {
      opacity: 0.6,
    }
  },
});

const footerLink = [
  {
    title: t("footer.about"),
    url: "/about",
    links: [
      {
        title: t("footer.aboutSerendie"),
        url: "/about",
      },
    ],
  },
  {
    title: t("footer.getStarted"),
    url: "/get-started",
    links: [
      {
        title: t("footer.design"),
        url: "/get-started/design",
      },
      {
        title: t("footer.development"),
        url: "/get-started/dev",
      },
    ],
  },
  {
    title: t("footer.foundation"),
    url: "/foundations",
    links: [
      {
        title: t("footer.designTokens"),
        url: "/foundations/design-tokens",
      },
      {
        title: t("footer.color"),
        url: "/foundations/color",
      },
      {
        title: t("footer.theming"),
        url: "/foundations/theming",
      },
      {
        title: t("footer.typography"),
        url: "/foundations/typography",
      },
      {
        title: t("footer.dimension"),
        url: "/foundations/dimension",
      },
      {
        title: t("footer.elevation"),
        url: "/foundations/elevation",
      },
      {
        title: t("footer.icon"),
        url: "/foundations/icon",
      },
      {
        title: t("footer.illustration"),
        url: "/foundations/illustration",
      },
    ],
  },
  {
    title: t("footer.components"),
    url: "/components",
    links: [
      {
        title: t("footer.accordion"),
        url: "/components/accordion",
      },
      {
        title: t("footer.button"),
        url: "/components/button",
      },
      {
        title: t("footer.list"),
        url: "/components/list",
      },
      {
        title: t("footer.search"),
        url: "/components/search",
      },
      {
        title: t("footer.select"),
        url: "/components/select",
      },
      {
        title: t("footer.tabs"),
        url: "/components/tabs",
      },
      {
        title: t("footer.textField"),
        url: "/components/text-field",
      },
      {
        title: t("footer.seeAll"),
        url: "/components",
      },
    ],
  },
];
---

<FooterWrapper>
  <FooterContainer>
      <FooterTitle>
        <a href='/'>
          {t("footer.title")}
        </a>
      </FooterTitle>
    <FooterLinks>
      {
        footerLink.map((link) => (
          <div>
            <h2><a href={link.url}>{link.title}</a></h2>
            <ul>
              {link.links.map((item, index) => (
                <FooterLinksLi>
                  <a href={item.url}>{item.title}</a>
                </FooterLinksLi>
              ))}
            </ul>
          </div>
        ))
      }
    </FooterLinks>
  </FooterContainer>
  <FooterCopyright>
    <span>
      {t("footer.copyright")}
    </span>
    <ul>
      <li>
        <a href='/terms'>{t("footer.terms")}</a>
      </li>
      <li>
        |
      </li>
      <li>
        <a href='https://x.com/SerendieDesign' target="_blank">{t("footer.contact")}</a>
      </li>
    </ul>
  </FooterCopyright>
</FooterWrapper>
